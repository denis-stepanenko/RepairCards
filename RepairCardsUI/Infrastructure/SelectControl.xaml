<UserControl x:Class="RepairCardsUI.Infrastructure.SelectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RepairCardsUI.Infrastructure"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="150">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <DockPanel Grid.Row="5" Grid.Column="1" LastChildFill="True">
        <Button DockPanel.Dock="Right" x:Name="chooseButton" Click="ChooseButton_Click" Visibility="{Binding ShowChooseButton, Converter={StaticResource BooleanToVisibilityConverter}}">Выбрать</Button>
        <Button DockPanel.Dock="Right" x:Name="clearButton" Click="ClearButton_Click" Visibility="{Binding ShowClearButton, Converter={StaticResource BooleanToVisibilityConverter}}">Сброс</Button>
        <TextBox Text="{Binding Text}" IsReadOnly="True" FontWeight="DemiBold"/>
    </DockPanel>
</UserControl>
